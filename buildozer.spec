[app]

# Nombre de la aplicación
title = Juego de Habilidades Lingüísticas

# Nombre del paquete (debe ser único)
package.name = habilidades_linguisticas

# Versión de la aplicación
version = 1.0

# Versión del código
numeric_version = 1

# Icono de la aplicación (debe estar en formato png y tener 512x512 píxeles)
icon.filename = images/icon.png

# Incluir los archivos de datos de la aplicación
source.include_exts = py,png,jpg,kv

# Dependencias de la aplicación (separadas por comas)
requirements = kivy

# Permisos requeridos por la aplicación (si es necesario)
android.permissions = INTERNET

# Configuración de empaquetado
package.domain = org.habilidades_linguisticas
package.author = Tu Nombre
package.source_dir = .

# Configuración de los archivos de datos de la aplicación
source.dir = .

